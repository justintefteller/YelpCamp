<% include partials/header %>


<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome To YelpCamp!</h1>
            <p>View our campgrounds!</p>
            <p>
                <button class="btn btn-primary btn-large"><a class="bn btn-primary btn-large" href="/campgrounds/new">Add a New Campground</a></button>
            </p>
        </div>
    </header>

    <div classs="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption"><%= campground.name %></div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include partials/footer %>